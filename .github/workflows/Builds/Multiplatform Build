name: Unity Multiplatform Build 

on:
  push:
    branches: [master]
  pull_request:
    branches: [master]
  workflow_dispatch:

jobs:
  build:
    name: Build for ${{ matrix.targetPlatform }}
    runs-on: ubuntu-latest  

    strategy:
      fail-fast: false
      matrix:
        targetPlatform: [StandaloneWindows64, StandaloneOSX, StandaloneLinux64]
        include:
          - targetPlatform: StandaloneWindows64
            buildSubdir: Windows
            zipName: WindowsBuild.zip
            executableExt: .exe
          
          - targetPlatform: StandaloneOSX
            buildSubdir: MacOS
            zipName: MacOSBuild.zip
            executableExt: .app
          
          - targetPlatform: StandaloneLinux64
            buildSubdir: Linux
            zipName: LinuxBuild.zip
            executableExt: .x86_64

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Activate Unity License
        uses: game-ci/unity-request-activation-file@v2
        with:
          unityLicense: ${{ secrets.UNITY_LICENSE }}

      - name: Build Unity Project
        uses: game-ci/unity-builder@v2
        with:
          targetPlatform: ${{ matrix.targetPlatform }}
          buildName: ${{ matrix.buildSubdir }}
          buildsPath: Builds
          unityVersion: 2022.3.10f1  

      - name: Create ZIP archive
        run: |
          cd Builds/${{ matrix.buildSubdir }}
          zip -r ../${{ matrix.zipName }} ./*

      - name: Upload Artifact
        uses: actions/upload-artifact@v3
        with:
          name: ${{ matrix.zipName }}
          path: Builds/${{ matrix.zipName }}
